<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sponews.dao.LoginDAO">
	<select id="getLogin" resultType="java.util.HashMap">
		SELECT id, user_id, user_pw, user_type FROM user WHERE user_id = #{user_id} AND user_pw = #{user_pw}
	</select>
	
	<insert id="setLogin">
		INSERT INTO user (user_id, user_pw) VALUES (#{user_id}, #{user_pw});
	</insert>
	
</mapper>